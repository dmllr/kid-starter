<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.andexert.library.RippleView style="@style/rippleWrap">
        <TextView
            android:id="@+id/toggleChildParentalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_l"
            android:textSize="@dimen/font_size_m"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin_l"
            android:drawableStart="@drawable/ic_parent"
            android:drawableLeft="@drawable/ic_parent"
            android:text="@string/switch_to_parental" />
    </com.andexert.library.RippleView>

    <include layout="@layout/ad_banner" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_xxl"
            android:layout_marginRight="@dimen/margin_xxl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.andexert.library.RippleView
                    style="@style/rippleWrap"
                    android:layout_marginTop="@dimen/margin_s">

                    <LinearLayout
                        android:id="@+id/viewToContacts"
                        android:padding="@dimen/margin_xs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_action"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorActionText"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_s"
                            android:layout_marginRight="@dimen/margin_s"
                            android:lines="3"
                            android:text="@string/edit_contacts" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    style="@style/rippleWrap"
                    android:layout_marginTop="@dimen/margin_s">

                    <LinearLayout
                        android:id="@+id/viewToApps"
                        android:padding="@dimen/margin_xs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_action"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/colorActionText"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_s"
                            android:layout_marginRight="@dimen/margin_s"
                            android:lines="3"
                            android:text="@string/edit_apps" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    style="@style/rippleWrap"
                    android:layout_marginTop="@dimen/margin_s">

                    <LinearLayout
                        android:id="@+id/viewSwitchToKidMode"
                        android:padding="@dimen/margin_xs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_action"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/colorActionText"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_s"
                            android:layout_marginRight="@dimen/margin_s"
                            android:lines="3"
                            android:text="@string/switch_to_kid" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin_s"
                    android:text="@string/or" />

                <com.andexert.library.RippleView style="@style/rippleWrap">

                    <LinearLayout
                        android:id="@+id/viewClearDefaults"
                        android:padding="@dimen/margin_xs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_action"
                            android:gravity="center"
                            android:text=" "
                            android:textColor="@color/colorActionText"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_s"
                            android:layout_marginRight="@dimen/margin_s"
                            android:lines="3"
                            android:text="@string/clear_defaults" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

            </LinearLayout>

        </ScrollView>

        <View
            android:id="@+id/viewDimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="#55000000"/>

    </FrameLayout>

</LinearLayout>
